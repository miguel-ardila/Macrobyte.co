---
// Componente WhatsApp Button: Botón flotante para contacto directo
// Funciona tanto en móviles como en escritorio
// Cambia el número de teléfono según tus necesidades

// Configuración del WhatsApp
const whatsappNumber = "+573162375512"; // Número oficial de Macrobyte
const defaultMessage = "¡Hola! Me interesa saber más sobre los equipos y soluciones IT de Macrobyte.";
---

<!-- Botón flotante de WhatsApp -->
<div class="fixed bottom-6 right-6 z-50">
  <a
    href={`https://wa.me/${whatsappNumber.replace(/\D/g, '')}?text=${encodeURIComponent(defaultMessage)}`}
    target="_blank"
    rel="noopener noreferrer"
    class="whatsapp-button group"
    aria-label="Contactar por WhatsApp"
  >
    <!-- Fondo del botón con gradiente -->
    <div class="w-14 h-14 bg-gradient-to-br from-green-400 to-green-600 rounded-full flex items-center justify-center shadow-lg hover:shadow-xl transform hover:scale-110 transition-all duration-300 animate-float">
      
      <!-- Ícono de WhatsApp -->
      <svg 
        class="w-8 h-8 text-white" 
        fill="currentColor" 
        viewBox="0 0 24 24"
        xmlns="http://www.w3.org/2000/svg"
      >
