---
// Página principal de Macrobyte
// Landing page con todas las secciones solicitadas
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import WhatsAppButton from '../components/WhatsAppButton.astro';
import { Image } from 'astro:assets';
import smartImg from '../assets/smart.webp';
import pcImg from '../assets/pc.webp';
import MarcasMarquee from '@/components/MarcasMarquee.astro';
---

<Layout title="Macrobyte - Tecnología e Innovación" description="Somosuna empresa tecnológica especializada en la venta y soporte de equipos de cómputo, servidores, periféricos y soluciones IT que impulsan el crecimiento de tu negocio.">
  
  <!-- Estilos y scripts para loading bar -->
  <style>
    @keyframes loadingBar {
      0% { width: 0%; }
      50% { width: 75%; }
      100% { width: 100%; }
    }
    
    @keyframes shimmer {
      0% { transform: translateX(-100%); }
      100% { transform: translateX(200%); }
    }
  </style>

  <script>
    document.addEventListener('DOMContentLoaded', function() {
      const texts = [
        'Inicializando sistemas...',
        'Optimizando rendimiento...',
        'Configurando hardware...',
        'Estableciendo conexión...',
        'Validando componentes...',
        'Sistema listo!'
      ];
      
      const textElement = document.getElementById('loading-text');
      const percentageElement = document.getElementById('percentage');
      let currentIndex = 0;
      let currentPercentage = 0;
      
      function updateLoading() {
        // Cambiar texto
        if (textElement) {
          textElement.textContent = texts[currentIndex];
          currentIndex = (currentIndex + 1) % texts.length;
        }
        
        // Actualizar porcentaje
        if (percentageElement) {
          currentPercentage = Math.floor(Math.random() * 101);
          percentageElement.textContent = currentPercentage + '%';
        }
      }
      
      // Actualizar cada 2 segundos
      updateLoading();
      setInterval(updateLoading, 2000);
    });
  </script>

  <!-- Header con navegación -->
  <Header />

  <!-- Contenido principal -->
  <main>
    
        <!-- Sección de Bienvenida / Hero -->
    <section id="inicio" class="min-h-screen flex items-center justify-center pt-20">
      <div class="w-full mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 lg:grid-cols-[5fr,7fr] gap-4 lg:gap-1 items-center min-h-[80vh] lg:min-h-0">
          
          <!-- Contenido textual -->
          <div class="space-y-4 text-center lg:text-left flex flex-col justify-center lg:pr-2">
            <!-- Categoría -->
            <div class="text-cyan-primary-400 font-semibold text-xs md:text-sm tracking-wide uppercase">
              SOPORTE ESPECIALIZADO
            </div>
            
            <!-- Título principal -->
            <h1 class="text-2xl md:text-3xl lg:text-4xl font-modern font-bold text-white leading-tight">
              EQUIPOS IT
              <br />
              <span class="text-cyan-primary-400">PROFESIONALES</span>
            </h1>

            <!-- Descripción -->
            <p class="text-xs md:text-sm lg:text-base text-gray-300 leading-relaxed max-w-lg mx-auto lg:mx-0">
              Somos <strong class="text-white">Macrobyte</strong>, una empresa tecnológica especializada en la venta y soporte de equipos de cómputo, servidores, periféricos y soluciones IT que impulsan el crecimiento de tu negocio.
            </p>

            <!-- Loading Bar Infinito -->
            <div class="pt-6 max-w-xs">
              <!-- Texto dinámico -->
              <div class="mb-3">
                <p id="loading-text" class="text-xs text-gray-300 font-mono tracking-wide">Optimizando rendimiento...</p>
              </div>
              
              <!-- Barra de progreso -->
              <div class="relative">
                <!-- Fondo de la barra -->
                <div class="w-full h-2 bg-gray-800 rounded-full overflow-hidden border border-gray-700">
                  <!-- Barra animada -->
                  <div class="h-full bg-gradient-to-r from-cyan-primary-400 via-purple-800 to-cyan-primary-400 rounded-full" 
                       style="animation: loadingBar 3s ease-in-out infinite;">
                  </div>
                </div>
                
                <!-- Porcentaje -->
                <div class="flex justify-between items-center mt-2">
                  <span id="percentage" class="text-xs font-mono text-cyan-primary-400">0%</span>
                  <div class="flex space-x-1">
                    <div class="w-1 h-1 bg-cyan-primary-400 rounded-full animate-ping"></div>
                    <div class="w-1 h-1 bg-purple-800 rounded-full animate-ping" style="animation-delay: 0.5s;"></div>
                    <div class="w-1 h-1 bg-cyan-primary-400 rounded-full animate-ping" style="animation-delay: 1s;"></div>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <!-- Imagen del producto -->
          <div class="relative flex justify-center lg:justify-center items-center lg:pl-8">
            <div class="relative">
              <Image
                src={smartImg}
                alt="Soporte técnico especializado Macrobyte"
                widths={[480, 768, 1024, 1280]}
                sizes="(min-width: 1024px) 800px, 90vw"
                loading="eager"
                fetchpriority="high"
                class="w-full h-auto object-contain rounded-2xl min-w-[450px] max-w-[800px]"
              />
